<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    android:layout_height="250dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/img_photo"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <ImageView
                android:id="@+id/img_play"
                android:padding="8dp"
                android:visibility="visible"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle_outline_red_300_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <LinearLayout
            android:weightSum="2"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ko.wastatus.ui.FontedTextView
                android:id="@+id/img_upload"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                app:typeface="fabrica"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/stay_color"
                android:gravity="center"
                android:text="Save to Gallery"
                android:drawableLeft="@drawable/ic_photo_red_300_24dp" />

            <View
                android:background="@color/stay_color"
                android:layout_width="1dp"
                android:layout_height="wrap_content"/>

            <com.ko.wastatus.ui.FontedTextView
                android:id="@+id/img_share"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_upload"
                app:typeface="fabrica"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/stay_color"
                android:gravity="center"
                android:text="Share to Whatsapp"
                android:drawableLeft="@drawable/ic_share_red_300_24dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
